generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LegacyUser {
  id                        BigInt            @id @default(autoincrement())
  created_at                DateTime          @default(now()) @db.Timestamptz(6)
  name                      String?
  email                     String?           @unique
  phone                     String?
  college                   String?
  course                    String?
  address                   String?
  dob                       String?
  gender                    String?
  preferred_job_type        String?
  availability              String?
  preferred_location        String?
  degree                    String?
  college_edu               String?
  college_grade             String?
  education_duration_start  String?
  education_duration_end    String?
  class_xii                 String?
  class_xii_board           String?
  class_xii_grade           String?
  class_xii_details_start   String?
  class_xii_details_end     String?
  class_x                   String?
  class_x_board             String?
  class_x_grade             String?
  class_x_details_start     String?
  class_x_details_end       String?
  skills                    String[]          @default([])
  language_1_name           String?
  language_1_proficiency    String?
  language_2_name           String?
  language_2_proficiency    String?
  internships               Json?
  projects                  Json?
  profile_summary           String?
  certifications            Json?
  awards                    String?
  clubs                     String?
  exam_name                 String?
  exam_rank                 String?
  exams                     Json?
  resume_path               String?
  updated_at                DateTime?         @db.Timestamptz(6)

  @@map("users")
}


model RecruiterProfile {
  id                BigInt            @id @default(autoincrement())
  userId            String            @unique
  recruiter_name    String
  email             String
  contact_number    String?
  address           String?
  designation       String?
  organisation_name String?
  website           String?
  company_domain    String?
  hiring_for        String?
  created_at        DateTime          @default(now()) @db.Timestamptz(6)
  updated_at        DateTime          @updatedAt @db.Timestamptz(6)

  hirings           RecruiterHiring[]

  @@map("recruiter_profiles")
}

model RecruiterHiring {
  id                        BigInt              @id @default(autoincrement())
  created_at                DateTime            @default(now()) @db.Timestamptz(6)
  company_name              String
  job_title                 String
  work_experience_min       BigInt
  work_experience_max       BigInt
  salary_per_month_from     BigInt
  salary_per_month_to       BigInt
  additional_benefits       String
  primary_skills            String
  employment_type           String
  location                  String
  job_description           String
  application_deadline      String
  number_of_applications    BigInt
  educational_requirements  String
  communication_preferences String
  recruiter_profile_id      BigInt?
  good_to_have              String?
  key_responsibilities      String?
  what_we_offer             String?
  company_description       String?
  website_link              String?
  company_logo              String?
  preferred_qualifications  String?
  required_qualifications   String?
  why_join                  String?
  draft                     Boolean             @default(false)
  selection_process         String?
  skill_description         String?
  role                      String?
  recruiter_profile         RecruiterProfile?   @relation(fields: [recruiter_profile_id], references: [id], onDelete: Cascade)
  screening_questions       ScreeningQuestion[]

  @@map("recruiterhiring")
}

model ScreeningQuestion {
  id           BigInt          @id @default(autoincrement())
  question     String
  type         String
  recruiter_id BigInt
  ans          String?
  recruiter    RecruiterHiring @relation(fields: [recruiter_id], references: [id], onDelete: Cascade)

  @@map("screening_questions")
}

model User {
  id            String    @id
  name          String?
  email         String    @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  accounts      Account[]
  sessions      Session[]

  @@map("auth_user")
}

model Session {
  id        String   @id
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("auth_session")
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  idToken               String?
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("auth_account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("auth_verification")
}

model NaukriJob {
  id                       BigInt    @id @default(autoincrement())
  data_job_id              String    @unique
  title                    String
  link                     String
  company_name             String
  rating                   String?
  rating_href              String?
  rating_source_details    String?
  rating_source_no_reviews String?
  experience               String
  location                 String
  job_description          String?
  tags                     String?
  job_post_day             String?
  logo_url                 String?
  created_at               DateTime  @default(now()) @db.Timestamptz(6)
  salary                   String?
  posted_at                DateTime? @db.Timestamptz(6)

  @@index([created_at])
  @@index([data_job_id])
  @@map("naukri_jobs")
}

model Applied {
  id         BigInt   @id @default(autoincrement())
  job_id     BigInt
  user_id    String
  applied_at DateTime @default(now()) @db.Timestamptz(6)
  status     String
  viewed     Boolean

  @@map("applied")
}

view unified_jobs {
  id              String    @unique
  original_id     BigInt?
  source          String?
  title           String?
  company_name    String?
  location        String?
  experience      String?
  salary          String?
  job_description String?
  posted_ago      String?
  logo_url        String?
  apply_link      String?
  created_at      DateTime? @db.Timestamptz(6)
  posted_at       DateTime? @db.Timestamptz(6)
}
