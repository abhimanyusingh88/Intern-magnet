generator client {
  provider = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.

model LegacyUser {
  id                        BigInt            @id @default(autoincrement())
  created_at                DateTime          @default(now()) @db.Timestamptz(6)
  name                      String?
  email                     String?           @unique
  phone                     String?
  college                   String?
  course                    String?
  address                   String?
  dob                       String?
  gender                    String?
  preferred_job_type        String?
  availability              String?
  preferred_location        String?
  degree                    String?
  college_edu               String?
  education_duration_start  String?
  education_duration_end    String?
  class_xii                 String?
  class_xii_board           String?
  class_xii_details_start   String?
  class_xii_details_end     String?
  class_x                   String?
  class_x_board             String?
  class_x_details_start     String?
  class_x_details_end       String?
  skills                    String?
  language_1_name           String?
  language_1_proficiency    String?
  language_2_name           String?
  language_2_proficiency    String?
  internship_company        String?
  internship_duration_start String?
  internship_duration_end   String?
  projects                  String?
  profile_summary           String?
  certifications            String?
  awards                    String?
  clubs                     String?
  exam_name                 String?
  exam_rank                 String?
  resume_path               String?
  updated_at                DateTime?         @db.Timestamptz(6)
  recruiter_hirings         RecruiterHiring[]

  @@map("users")
}

model RecruiterHiring {
  id                        BigInt              @id @default(autoincrement())
  created_at                DateTime            @default(now()) @db.Timestamptz(6)
  company_name              String
  job_title                 String
  work_experience_min       BigInt
  work_experience_max       BigInt
  salary_per_month_from     BigInt
  salary_per_month_to       BigInt
  additional_benefits       String
  primary_skills            String
  employment_type           String
  location                  String
  job_description           String
  application_deadline      String
  number_of_applications    BigInt
  educational_requirements  String
  communication_preferences String
  user_id_recruiter         BigInt
  good_to_have              String?
  key_responsibilities      String?
  what_we_offer             String?
  company_description       String?
  website_link              String?
  company_logo              String?
  why_join                  String?
  required_qualifications   String?
  preferred_qualifications  String?
  draft                     Boolean @default(false) 
  user                      LegacyUser          @relation(fields: [user_id_recruiter], references: [id], onDelete: Cascade)
  screening_questions       ScreeningQuestion[]

  @@map("recruiterhiring")
}

model ScreeningQuestion {
  id           BigInt          @id @default(autoincrement())
  question     String
  type         String
  recruiter_id BigInt
  recruiter    RecruiterHiring @relation(fields: [recruiter_id], references: [id], onDelete: Cascade)

  @@map("screening_questions")
}



model User {
  id            String    @id
  name          String?
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("auth_user")
}

model Session {
  id        String   @id
  userId    String
  token     String
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  createdAt DateTime
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("auth_session")
}

model Account {
  id                    String    @id
  userId                String
  accountId             String
  providerId            String
  accessToken           String?
  idToken               String?
  refreshToken          String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("auth_account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("auth_verification")
}

model NaukriJob {
  id                       BigInt   @id @default(autoincrement())
  data_job_id              String   @unique
  title                    String
  link                     String
  company_name             String
  rating                   String?
  rating_href              String?
  rating_source_details    String?
  rating_source_no_reviews String?
  experience               String
  location                 String
  job_description          String?
  tags                     String?  // JSON array stored as string
  job_post_day             String?
  logo_url                 String?
  salary                   String?
  created_at               DateTime @default(now()) @db.Timestamptz(6)

  @@index([created_at])
  @@index([data_job_id])
  @@map("naukri_jobs")
}

view UnifiedJob {
  id              String   @id
  original_id     BigInt
  source          String
  title           String
  company_name    String
  location        String
  experience      String?
  salary          String?
  job_description String?
  posted_ago      String?
  logo_url        String?
  apply_link      String?
  created_at      DateTime @db.Timestamptz(6)

  @@map("unified_jobs")
}
